<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="12dp"
    android:padding="12dp"
    android:background="@drawable/rect_radious_stroke">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/rowShareBoardProfile"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginHorizontal="14dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/rowShareBoardName"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/rowShareBoardProfile"
        app:layout_constraintBottom_toBottomOf="@id/rowShareBoardProfile"
        app:layout_constraintStart_toEndOf="@id/rowShareBoardProfile"
        android:paddingHorizontal="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/rowShareBoardLevel"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/rowShareBoardProfile"
        app:layout_constraintBottom_toBottomOf="@id/rowShareBoardProfile"
        app:layout_constraintStart_toEndOf="@id/rowShareBoardName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/rowShareBoardSubtitle"
        android:textStyle="bold"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/rowShareBoardProfile"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/rowShareBoardText"
        android:textSize="14sp"
        android:maxLines="3"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/rowShareBoardSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/rowShareBoardImageLayout"
        app:layout_constraintTop_toBottomOf="@id/rowShareBoardText"
        android:paddingVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:id="@+id/rowShareBoardImage1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_weight="1" />
        <ImageView
            android:id="@+id/rowShareBoardImage2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="18dp"
            android:scaleType="centerCrop"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/rowShareBoardImage3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_weight="1" />
    </LinearLayout>
    <ImageView
        android:id="@+id/rowShareBoardLike"
        app:layout_constraintTop_toBottomOf="@id/rowShareBoardImageLayout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="18dp"
        android:layout_height="18dp"/>
    <TextView
        android:id="@+id/rowShareBoardLikeSum"
        android:textSize="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rowShareBoardImageLayout"
        app:layout_constraintStart_toEndOf="@id/rowShareBoardLike"
        android:paddingHorizontal="10dp"/>

    <ImageView
        android:id="@+id/rowShareBoardComment"
        app:layout_constraintTop_toBottomOf="@id/rowShareBoardImageLayout"
        app:layout_constraintStart_toEndOf="@id/rowShareBoardLikeSum"
        android:layout_width="18dp"
        android:layout_height="18dp"/>
    <TextView
        android:id="@+id/rowShareBoardCommentSum"
        android:textSize="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rowShareBoardImageLayout"
        app:layout_constraintStart_toEndOf="@id/rowShareBoardComment"
        android:paddingHorizontal="10dp"/>

    <TextView
        android:id="@+id/rowShareBoardDate"
        android:textSize="13sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_A500"
        app:layout_constraintTop_toBottomOf="@id/rowShareBoardImageLayout"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingHorizontal="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>