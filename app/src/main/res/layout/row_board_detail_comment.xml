<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/rowBoardDetailCommentProfile"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginHorizontal="14dp"
        android:layout_marginVertical="10dp"
        android:src="@color/black_A500"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/rowBoardDetailCommentName"
        android:text="asdfasdfasdfadfs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/rowBoardDetailCommentProfile"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="10dp"
        android:textSize="15sp"
        android:textStyle="bold"/>
    <TextView
        android:text="asdfasdfsadfaf"
        android:id="@+id/rowBoardDetailCommentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="4dp"
        android:textColor="@color/white_700"
        android:textStyle="bold"
        android:textSize="11sp"/>
    <TextView
        android:text="asdfasdfsadfaf"
        android:id="@+id/rowBoardDetailCommentText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rowBoardDetailCommentName"
        app:layout_constraintStart_toEndOf="@id/rowBoardDetailCommentProfile"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="10dp"
        android:textColor="@color/black_A200"
        android:textSize="14sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>