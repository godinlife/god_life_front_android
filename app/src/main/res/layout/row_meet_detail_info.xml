<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/rowMeetInfoProfile"
        android:src="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="8dp"
        android:layout_width="32dp"
        android:layout_height="32dp"/>
    <TextView
        android:id="@+id/rowMeetInfoName"
        android:text="asdfasdfafsd"
        app:layout_constraintStart_toEndOf="@id/rowMeetInfoProfile"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"
        android:layout_margin="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/rowMeetInfoText"
        android:text="asdfasdfafsd"
        app:layout_constraintStart_toEndOf="@id/rowMeetInfoProfile"
        app:layout_constraintTop_toBottomOf="@id/rowMeetInfoName"
        android:layout_marginStart="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/rowMeetInfoPermission"
        android:text="관리자"
        app:layout_constraintStart_toEndOf="@id/rowMeetInfoName"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="4dp"
        android:textStyle="bold"
        android:textColor="@color/link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>