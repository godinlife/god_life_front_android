<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".share_page.BoardDetail">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".share_page.BoardDetail">

    <ImageView
        android:id="@+id/boardDetailClose"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_baseline_close_24"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="14dp"

        app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
        android:id="@+id/boardDetailMenu"
        android:src="@drawable/ic_baseline_more_vert_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="35dp"
        android:layout_margin="14dp"

        android:layout_height="35dp"/>
    <TextView
        android:id="@+id/boardDetailTitle"
        android:layout_width="0dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginVertical="6dp"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        android:paddingBottom="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/boardDetailClose"
        app:layout_constraintEnd_toStartOf="@id/boardDetailMenu"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/boardDetailProfile"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginHorizontal="14dp"
        android:layout_marginVertical="10dp"
        android:src="@color/black_A500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/boardDetailTitle"/>


    <TextView
        android:text="asdfasdfasdfadfs"
        android:id="@+id/boardDetailName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/boardDetailTitle"
        app:layout_constraintStart_toEndOf="@id/boardDetailProfile"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="10dp"
        android:textSize="15sp"
        android:textStyle="bold"/>
    <TextView
        android:text="asdfasdfsadfaf"
        android:id="@+id/boardDetailDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/boardDetailProfile"
        app:layout_constraintTop_toBottomOf="@id/boardDetailName"
        android:layout_marginStart="10dp"
        android:textColor="@color/white_700"
        android:textStyle="bold"
        android:textSize="11sp"/>
    <TextView
        android:id="@+id/boardDetailText"
        android:text="asdfdfas\nasDFASD\NSDAF\NSADFASDF"
        android:paddingVertical="12dp"
        android:layout_margin="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/boardDetailProfile"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDetailBoardImage"
        android:layout_width="match_parent"
        android:paddingHorizontal="14dp"
        android:layout_height="140dp"
        app:layout_constraintTop_toBottomOf="@id/boardDetailText"/>


    <ImageView
        android:id="@+id/boardDetailLike"
        app:layout_constraintTop_toBottomOf="@id/rvDetailBoardImage"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="14dp"
        android:layout_marginTop="18dp"
        android:layout_width="18dp"
        android:layout_height="18dp"/>
    <TextView
        android:id="@+id/boardDetailLikeSum"
        android:textSize="14dp"
        android:layout_marginTop="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rvDetailBoardImage"
        app:layout_constraintStart_toEndOf="@id/boardDetailLike"
        android:paddingHorizontal="10dp"/>

    <ImageView
        android:id="@+id/boardDetailComment"
        android:src="@drawable/ic_baseline_message_24"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/rvDetailBoardImage"
        app:layout_constraintStart_toEndOf="@id/boardDetailLikeSum"
        android:layout_width="18dp"
        android:layout_height="18dp"/>
    <TextView
        android:id="@+id/boardDetailCommentSum"
        android:textSize="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/rvDetailBoardImage"
        app:layout_constraintStart_toEndOf="@id/boardDetailComment"
        android:paddingHorizontal="10dp"/>

    <LinearLayout
        android:id="@+id/boardDetailCommentLayout"
        app:layout_constraintTop_toBottomOf="@id/boardDetailLike"
        android:layout_width="match_parent"
        android:layout_marginTop="18dp"
        android:layout_height="60dp"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical">
        <TextView
            android:text="댓글"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginStart="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/boardDetailCommentSumUnder"
            android:text="123개"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDetailBoardComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/boardDetailCommentLayout"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>