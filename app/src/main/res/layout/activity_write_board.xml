<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:layout_margin="12dp"
    tools:context=".share_page.WriteBoardActivity">

    <ImageView
        android:id="@+id/writeBoardClose"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_baseline_close_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
        android:id="@+id/writeBoardMenu"
        android:src="@drawable/ic_baseline_more_vert_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="35dp"
        android:layout_height="35dp"/>
    <TextView
        android:id="@+id/writeBoardTitle"
        android:text="게시글 작성"
        android:layout_width="0dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginVertical="6dp"
        android:layout_height="wrap_content"
        android:paddingBottom="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/writeBoardClose"
        app:layout_constraintEnd_toStartOf="@id/writeBoardMenu"/>

    <Spinner
        android:id="@+id/writeBoardSpinner1"
        app:layout_constraintTop_toBottomOf="@id/writeBoardTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/writeBoardSpinner2"
        android:layout_width="0dp"
        android:layout_marginHorizontal="8dp"
        android:layout_height="wrap_content"/>
    <Spinner
        android:id="@+id/writeBoardSpinner2"
        app:layout_constraintTop_toBottomOf="@id/writeBoardTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/writeBoardSpinner1"
        android:layout_width="0dp"
        android:layout_marginHorizontal="8dp"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/writeBoardEditTitle"
        app:layout_constraintTop_toBottomOf="@id/writeBoardSpinner1"
        android:layout_width="match_parent"
        android:hint="제목을 입력하세요"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/writeBoardEditText"
        app:layout_constraintTop_toBottomOf="@id/writeBoardEditTitle"
        android:layout_width="match_parent"
        android:hint="내용을 입력하세요."
        android:padding="8dp"
        android:background="@null"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>