<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".meet_page.MeetDetailInfoFragment"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/meetDetailInfoImage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/meetDetailInfoIcon"
            android:layout_width="35dp"
            android:src="@color/colorPrimary"
            android:layout_marginHorizontal="12dp"
            android:layout_height="35dp"/>
        <TextView
            android:text="asdfasdfasdf"
            android:id="@+id/meetDetailTitle"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/meetDetailInfoSince"
            android:text="asdfasdf"
            android:textSize="14sp"
            android:textColor="@color/black_A500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:id="@+id/meetDetailInfoText"
        android:layout_margin="14dp"
        android:text="asdfasdfafsdafsdasfdafsdasdfasdf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/meetDetailInfoSignup"
        android:text="가입하기"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_marginHorizontal="36dp"
        android:layout_marginVertical="12dp"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/meetDetailInfoCount"
        android:text="갓생을 공유하는 멤버들"
        android:layout_marginHorizontal="18dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginVertical="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvmeetDetailInfo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>