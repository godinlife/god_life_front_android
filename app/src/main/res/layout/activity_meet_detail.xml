<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/why"
    tools:context=".meet_page.MeetDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarMeetDetail"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/tbMeetDetailClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="15dp"
            android:layout_gravity="start"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_24"/>

        <TextView
            android:id="@+id/tbMeetDetailTitle"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_gravity="start"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@drawable/ic_baseline_wb_twilight_24"
            android:layout_gravity="end"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginHorizontal="8dp" />
        <ImageView
            android:src="@drawable/ic_baseline_notifications_none_24"
            android:layout_gravity="end"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginHorizontal="8dp"/>
        <ImageView
            android:src="@drawable/ic_baseline_search_24"
            android:layout_gravity="end"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginHorizontal="8dp" />
    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tbMeetDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/toolbarMeetDetail"
        app:tabSelectedTextColor="@color/colorPrimary"
        app:tabIndicatorColor="@color/colorPrimary"
        app:tabRippleColor="@null">
        <com.google.android.material.tabs.TabItem
            android:text="모임정보"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.google.android.material.tabs.TabItem
            android:text="게시판"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.google.android.material.tabs.TabItem
            android:text="사진첩"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.google.android.material.tabs.TabItem
            android:text="실시간 채팅"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </com.google.android.material.tabs.TabLayout>

    <FrameLayout
        android:id="@+id/meetDetailFrame"
        app:layout_constraintTop_toBottomOf="@id/tbMeetDetail"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/meetDetailAddButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_add_24"
        android:backgroundTint="@color/colorPrimary"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp" />
</androidx.constraintlayout.widget.ConstraintLayout>