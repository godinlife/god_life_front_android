<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rect_radious_stroke"
    android:layout_marginVertical="8dp"
    android:paddingVertical="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/rowFindImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginHorizontal="14dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/rowFindName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rowFindImage"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="20dp"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/rowFindLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="3dp"
        app:layout_constraintTop_toBottomOf="@id/rowFindName"
        app:layout_constraintStart_toEndOf="@+id/rowFindImage"
        android:layout_marginStart="20dp"
        android:textSize="11sp"/>
    <TextView
        android:id="@+id/rowFindCategoryText"
        android:text="주요활동 "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rowFindLevel"
        app:layout_constraintStart_toEndOf="@+id/rowFindImage"
        android:layout_marginStart="20dp"
        android:textSize="12sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/rowFindCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/rowFindCategoryText"
        app:layout_constraintBottom_toBottomOf="@id/rowFindCategoryText"
        app:layout_constraintStart_toEndOf="@+id/rowFindCategoryText"
        android:textSize="11sp"/>

    <ImageView
        android:id="@+id/rowFindChat"
        android:src="@drawable/ic_baseline_message_24"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginHorizontal="14dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>