<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".share_page.ShareBoardFragment">

    <TextView
        android:id="@+id/shareBoard0"
        android:text="필독"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/light_red"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/shareBoard1"
        android:text="공지"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintTop_toBottomOf="@id/shareBoard0"
        android:textColor="@color/black_A500"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvShareBoard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/shareBoard1"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>