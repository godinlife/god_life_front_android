<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape
            android:shape="rectangle">
            <gradient android:startColor="@color/black"
                android:centerColor="@color/black_A500"
                android:endColor="#00FFFFFF"
                android:centerY="0.9"
                android:angle="90"/>
            <padding android:top="2dp"/>
            <corners android:bottomRightRadius="0dp" android:bottomLeftRadius="0dp"
                android:topLeftRadius="15dp" android:topRightRadius="15dp"/>
        </shape>
    </item>

    <item android:top="2dp" >
        <shape>
            <solid android:color="@color/white"/>
            <corners android:bottomRightRadius="0dp" android:bottomLeftRadius="0dp"
                android:topLeftRadius="12dp" android:topRightRadius="12dp"/>
        </shape>
    </item>

</layer-list>